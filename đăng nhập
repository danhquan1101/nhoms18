                DangNhap dn = new DangNhap();
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        // TODO add your handling code here:
         String connectionUrl = "jdbc:sqlserver://localhost;databaseName=QUANLYCONGTY_GIAHUY;user=sa;password=88888888";

        try (Connection con = DriverManager.getConnection(connectionUrl); Statement stmt = con.createStatement();) {
            String SQL = "SELECT TOP 1000 * FROM [QUANLYCONGTY_GIAHUY].[dbo].[LOGIN]";
            ResultSet rs = stmt.executeQuery(SQL);

        
            while (rs.next()) {
                dn.setTaiKhoan(txtTaiKhoan.getText());
                char[] mk = txtPassword.getPassword();
                String MK = String.valueOf(mk);
                if(dn.getTaiKhoan().equalsIgnoreCase(rs.getString("TAIKHOAN")) && MK.equalsIgnoreCase(rs.getString("MATKHAU"))){
                    Menu mn = new Menu();
                    JOptionPane.showMessageDialog(null, "Đăng nhập thành công!");
                    mn.setVisible(true);
                    this.setVisible(false);
                }else{
                    JOptionPane.showMessageDialog(null, "Sai tài khoản hoặc mật khẩu!");
                }
            }
        }
     
        catch (SQLException e) {
            System.out.println(e);
            JOptionPane.showMessageDialog(null,"Lỗi đăng nhập!");
        }
    }//GEN-LAST:event_jButton1ActionPerformed

